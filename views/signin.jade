extend layout

block scripts
  script(type='text/javascript', src='web/signin.js')

block signin
  form.form-signin(role='form', action='login', method='post')
    input.form-control(placeholder='Login', name='login', autofocus)
    input.form-control.password(placeholder='Password', name='pass', required, type='password')
    .row
      .col-md-12
        a.sign-up Sign up
        label.remember.checkbox
          input(type='checkbox', value='remember-me')
          span Remember me
    .row
      .col-md-12
        button.btn.btn-lg.btn-primary.btn-block(type='submit', value='Submit').
          #{(flash && flash.error) || "Signin"}

block content
  block signin
